<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new comment to <i><%= movie.title %></i></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/movies/<%= movie._id %>/comments" method="POST">
                <div class="form-group">
                    <p>Your nickname:</p>
                    <input class="form-control" type="text" name="comment[author]" required>
                </div>
                <div class="form-group">
                    <p>Leave your review:</p>
                     <textarea class="form-control" name="comment[text]" id="comment[text]" placeholder="review and comments" rows="15" cols="60" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>
