<% include partials/header %>
<div class="container">
    <div class="row">

        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center">Add a new movie</h1>
            <form action="/movies" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="movie title" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="genre" placeholder="genres" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="poster" placeholder="movie poster url" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/movies">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>

