<% include partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Rate-your-movies!</h1>
             <p>Rate the movies you watched and share your comments with movie lovers around the world.</p>
             <p>
                <a class="btn btn-primary btn-large" href="/movies/new">Add New Moives</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% movies.forEach(function(element){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= element.poster %>">
                   <div class="caption">
                       <h4><%= element.title %></h4>
                       <p><%= element.genre %></p>
                   </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>
